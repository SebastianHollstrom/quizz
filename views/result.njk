{% extends "layout.njk" %}
{% block content %}
<main class="container">
  
  <h1>{{message}}</h1>
  <pre>{{ result | dump(2) }}</pre>
  <pre>{{ questions | dump(2) }}</pre>

    {% for question in questions %}
    <h2>{{ question.text }}</h2>
    {%set loopIndex = loop.index%}
    <ul>
      {% for answer in question.answers %}
        <li>
          <input
            class="{% if result[loopIndex].correct and (answer == question.correctAnswer) %}radioTrue{% endif %}"
            type="radio"
            id="{{ question.id }}"
            name="{{ question.id }}"
            value="{{ answer }}"
            disabled>
          <label for="answers">{{ answer }}</label>
        </li>
      {% endfor %}
      </ul>
    {% endfor %}

  <p><a href="/quiz/">GÃ¶r quizzet igen</a></p>
</main>
{% endblock %}

